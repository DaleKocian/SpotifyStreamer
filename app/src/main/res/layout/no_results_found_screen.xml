<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/llNoResultsFound"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center_horizontal"
              android:orientation="vertical"
              android:paddingTop="@dimen/top_distance">

    <ImageView
        android:layout_width="@dimen/default_view_icon_width_height"
        android:layout_height="@dimen/default_view_icon_width_height"
        android:src="@drawable/alert"
        android:id="@+id/ivDesktop"
        android:contentDescription="@string/cd_no_results_image"/>

    <TextView
        android:id="@+id/tvNoResultsFound"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"/>

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/no_results_description"
        android:textAppearance="?android:attr/textAppearanceSmall"/>
</LinearLayout>