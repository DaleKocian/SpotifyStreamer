<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent" android:background="@color/gallery">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Artist Name"
        android:id="@+id/tvArtistName"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Album Name"
        android:id="@+id/tvAlbumName"
        android:layout_below="@+id/tvArtistName"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="300dp"
        android:id="@+id/ivAlbumArt"
        android:layout_below="@+id/tvAlbumName" />

    <ProgressBar
        style="?android:attr/progressBarStyleSmall"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pbDuration"
        android:layout_below="@+id/tvTrackName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:src="@android:drawable/ic_media_previous"
        android:id="@+id/ivPrevious"
        android:layout_below="@+id/pbDuration"
        android:layout_marginTop="32dp"
        android:contentDescription="Play previous track" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ivPlayPause"
        android:background="@android:color/black"
        android:src="@android:drawable/ic_media_play"
        android:layout_alignTop="@+id/ivPrevious"
        android:layout_centerHorizontal="true"
        android:contentDescription="Play current track" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/black"
        android:src="@android:drawable/ic_media_next"
        android:id="@+id/ivNext"
        android:layout_alignTop="@+id/ivPlayPause"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="Play next track" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Track Name"
        android:id="@+id/tvTrackName"
        android:layout_below="@+id/ivAlbumArt"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0:00"
        android:id="@+id/tvCurrentTime"
        android:layout_below="@+id/pbDuration"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="0:30"
        android:id="@+id/tvDuration"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/tvCurrentTime" />

</RelativeLayout>